<div class="row blockchains-table">

  <div class="col-xs-12 col-md-8 col-md-offset-2">

    <div class="back-block">
      <button class="btn btn-default btn-sm back-button"><span class="glyphicon glyphicon glyphicon-menu-left" aria-hidden="true"></span>&nbsp;Back to main screen</button>
    </div>

    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Blockchain</th>
            <th>Address</th>
            <th>Investments amount</th>
            <th>Tokens amount (estimated)</th>
          </tr>
        </thead>
        <tbody>
          {{#each addresses}}
            <tr>
              <td class="logo {{name}}">{{title}}</td>
              <td class="create">
                {{#if address}}
                  <span>{{address}}</span>
                  <span>&nbsp;<button class="btn btn-default btn-xs qr-button" data-address="{{address}}">QR</button></span>
                {{else}}
                  <button class="btn btn-default btn-sm">Request an address</button>
                {{/if}}
              </td>
              <td class="amount">{{amount}}</td>
              <td class="tokens">{{tokens}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

  </div>

  <div class="modal fade qr-modal">
    <div class="modal-dialog modal-sm" role="document">
      <div class="modal-content">
        <div class="modal-header visible-xs-block visible-sm-block">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
        <div class="modal-body text-center">
          <canvas class="qr-canvas"></canvas>
        </div>
      </div>
    </div>
  </div>

</div>